{% extends 'account/base.html.twig' %}

{% trans_default_domain 'app' %}

{% block title %}{{ 'account.title'|trans }}{% endblock %}

{% block account_content %}
    <div class="my_account__container">
        <div class="my_account__content">
            <div class="my_account__content_title">
                <h2>Mon compte</h2>
            </div>

            {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.pictureProfile) }}


                <input type="submit" class="form_submit btn btn-text-primary" value="{{ 'account.action.edit'|trans }}">
            {{ form_end(form) }}
        </div>

        <div class="account_disconnect__content">
            <div class="account_disconnect__content_title">
                <h2>Déconnexion</h2>
            </div>
            <p class="account_disconnect__content_description">Si vous vous déconnecter, il faudrat vous reconnecter pour pouvoir réediter votre profile.</p>

            <a href="{{ path('app_security_logout') }}">
                <button class="btn btn-background-primary">
                    Déconnexion
                </button>
            </a>
        </div>
    </div>
{% endblock %}